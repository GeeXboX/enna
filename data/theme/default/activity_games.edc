images {
   image: "panel_bottom.png" COMP;
}

group {
   name: "activity/games";
   parts {

      /* Main Clip */
      part {
         name: "module.clip";
         type: RECT;
         description {
            state: "default" 0.0;
            color: 0 0 0 0;
            visible: 0;
         }
         description {
            state: "show" 0.0;
            color : 255 255 255 255;
            visible: 1;
         }
      }

      /* Swallow for menu games */
      part { name: "menu.clip";
         type: RECT;
         mouse_events: 0;
         clip_to: "module.clip";
         description {state: "default" 0.0;
            color: 255 255 255 0;
            visible: 0;
            rel1 {relative: 0.1 -0.9;to: "module.clip";}
            rel2 {relative: 0.9 0;offset: 0 -64;to: "module.clip";}
         }
         description{state: "show" 0.0;
            color: 255 255 255 255;
            visible: 1;
            rel1 {relative: 0.1 0.02;to: "module.clip";}
            rel2 {relative: 0.9 1;offset: 0 -64;to: "module.clip";}
         }
      }
      part {
         name: "menu.swallow";
         type: SWALLOW;
         mouse_events : 1;
         clip_to: "menu.clip";
         description {
            state: "default" 0.0;
            color: 255 255 255 255;
            rel1 {relative: 0 0; ; to: "menu.clip";}
            rel2 {relative: 1 1; ; to: "menu.clip";}
         }
      }
   }
   programs {
      program {
         name: "module,show";
         signal: "module,show";
         source:  "enna";
         action:  STATE_SET "show" 0.0;
         transition: SINUSOIDAL 0.5;
         target: "module.clip";
      }
      program {
         name: "module,hide";
         signal: "module,hide";
         source:  "enna";
         action:  STATE_SET "default" 0.0;
         transition: SINUSOIDAL 0.5;
         target: "module.clip";
      }
      program {
         name: "menu,show";
         signal: "menu,show";
         source:  "enna";
         action:  STATE_SET "show" 0.0;
         transition: SINUSOIDAL 0.5;
         target: "menu.clip";
      }
      program {
         name: "menu,hide";
         signal: "menu,hide";
         source:  "enna";
         action:  STATE_SET "default" 0.0;
         transition: SINUSOIDAL 0.5;
         target: "menu.clip";
      }
   }
}
