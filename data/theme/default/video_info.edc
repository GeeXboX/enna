images {
   image: "shadow.png" COMP;
   image: "panel_right.png" COMP;
}

group {
   name: "video_info";
   styles
   {
      style { name: "infos_style";
         base: "font=content font_size=14 align=left color=#FFF wrap=word";
         tag:  "br" "\n";
         tag:  "hilight" "+ font_size=18 font=content_bd color=#A0D026";
         tag:  "b" "+ font=conten_bd";
         tag:  "tab" "\t";
         tag:  "c" "+ align=center font_size=24 font=content_bd color=#A0D026A0 color2=#A0D026A0 style=GLOW";
      }
   }
   parts {

      part {
         name: "enna.clip.player";
         type: RECT;
         description {
            state: "default" 0.0;
            color : 255 255 255 255;
            visible: 1;
         }
      }


/*****************************************************************************/
/*			Movie Snapshot                                       */
/*****************************************************************************/

      part {
         name: "enna.clip.snapshot";
         type: RECT;
         description {
            state: "default" 0.0;
            color: 0 0 0 0;
            visible: 0;
            rel1 { relative: 0.0 0.0; };
            rel2 { relative: 1.0 0.85; };
         }
         description {
            state: "show" 0.0;
            inherit: "default" 0.0;
	    color: 255 255 255 255;
            visible: 1;
         }
      }

      part {
         name: "enna.swallow.snapshot";
	 clip_to: "enna.clip.snapshot";
         type: SWALLOW;
         mouse_events: 0;
         description {
            state: "default" 0.0;
            rel1 { relative: 0 0; to: "enna.clip.snapshot"; }
            rel2 { relative: 1 1; to: "enna.clip.snapshot"; }
         }
      }

/*****************************************************************************/
/*			Movie Infos                                          */
/*****************************************************************************/

      part {
         name: "info.clip.bg";
         type: RECT;
         mouse_events: 0;
         clip_to: "enna.clip.player";
         description {
            state: "default" 0.0;
            color: 0 0 0 0;
            rel1 { relative: 0.7 0.0; }
            rel2 { relative: 1.0 1.0; }
         }
      }
      part {
         name: "info.bg";
         type: IMAGE;
         mouse_events: 0;
         //clip_to: "info.clip.bg";
         description {
            state: "default" 0.0;
            rel1 { relative: 0.7 0.0; /*offset: -34 -38;*/}
            rel2 { relative: 1.0 1.0; }
            image
            {
                normal: "panel_right.png";
                border: 18 0 0 0;
            }
         }
      }

/*****************************************************************************/
/*			Movie Cover                                          */
/*****************************************************************************/



      part {
         name: "enna.clip.cover";
         //clip_to: "enna.clip.player";
         type: RECT;
         description {
            state: "default" 0.0;
            color: 255 255 255 0;
            visible: 0;
            rel1 { relative: 0.0 0.0; to: "enna.swallow.cover";}
            rel2 { relative: 1.0 1.0; to: "enna.swallow.cover";offset: 13 13;}
         }
         description {
            state: "show" 0.0;
            inherit: "default" 0.0;
            color : 255 255 255 255;
            visible: 1;
         }
      }

      part {
         name: "shadow_cover";
         type: IMAGE;
         clip_to: "enna.clip.cover";
         mouse_events: 0;
         description
         {
            state: "default" 0.0;
            visible: 1;
            color: 255 255 255 255;
            rel1 { relative: 0.0 0.0; to: "enna.swallow.cover"; }
            rel2 { relative: 1.0 1.0; to: "enna.swallow.cover"; offset: 13 13; }
            image.normal: "shadow.png";
            image.border: 14 14 14 14;
         }
      }

      part {
         name: "enna.swallow.cover";
         clip_to: "enna.clip.cover";
         type: SWALLOW;
         mouse_events : 1;
         description {
            state: "default" 0.0;
            color: 255 255 255 255;
            aspect: 0.75 0.75;
            aspect_preference: VERTICAL;
            align: 0.5 0.5;
            rel1 { relative: 0 0.5;offset: 20 20;to: "info.clip.bg";}
            rel2 { relative: 1 1.0;offset: -20 -20;to: "info.clip.bg";}

         }
      }


/*****************************************************************************/
/*			Movie Title                                          */
/*****************************************************************************/

      part {
	 name:           "enna.text.title";
	 type:           TEXT;
	 mouse_events:   0;
	 description {
	    state: "default" 0.0;
	    rel1 {
	        relative: 0 0.85;
               //	        to_x: "enna.swallow.cover";

	    };
	    rel2 {
	        relative: 0.0 1.0;
	        to_x: "info.clip.bg";
	    };
            color:  200 200 200 200;
            color3: 128 128 128 200;

	    text {
               text:     "Title";
               font:     "content_bd";
               size:     45;
               align: 0.5 0.5;

            }
	 }
      }

/*****************************************************************************/
/*			Movie Properties                                     */
/*****************************************************************************/
      part {
         name: "enna.text";
	    type: TEXTBLOCK;
	    mouse_events: 0;
	    scale: 1;
	    description { state: "default" 0.0;
               rel1 { relative: 0.0 0.0; to: "info.clip.bg"; offset: 28 10;}
               rel2 { relative: 1.0 0.5; to: "info.clip.bg"; offset: -10 -10;}
	       text {
		  style: "infos_style";
		  min: 0 0;

	       }
	    }
	 }
   }

   programs {
      program {
         name: "snapshot,show";
         signal: "snapshot,show";
         source:  "enna";
         action:  STATE_SET "show" 0.0;
         transition: SINUSOIDAL 1.0;
         target: "enna.clip.snapshot";
      }
      program {
         name: "snapshot,hide";
         signal: "snapshot,hide";
         source:  "enna";
         action:  STATE_SET "default" 0.0;
         transition: SINUSOIDAL 1.0;
         target: "enna.clip.snapshot";
      }
      program {
         name: "cover,show";
         signal: "cover,show";
         source:  "enna";
         action:  STATE_SET "show" 0.0;
         transition: SINUSOIDAL 1.0;
         target: "enna.clip.cover";
      }
      program {
         name: "cover,hide";
         signal: "cover,hide";
         source:  "enna";
         action:  STATE_SET "default" 0.0;
         transition: SINUSOIDAL 1.0;
         target: "enna.clip.cover";
      }
   }
}
