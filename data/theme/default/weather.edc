/**********/
/* Module */
/**********/

      part {
         name: "weather.clip";
         type: RECT;
         description {
            state: "default" 0.0;
            color: 0 0 0 0;
            visible: 0;
         }
         description {
            state: "show" 0.0;
            color : 255 255 255 255;
            visible: 1;
         }
      }

/**************/
/* Background */
/**************/

      part {
         name: "weather.bg.clip";
         clip_to: "weather.clip";
         type: RECT;
         description {
            state: "default" 0.0;
            color: 0 0 0 0;
            visible: 0;
            rel1 { relative: 0.0 0.0; to: "weather.clip"; };
            rel2 { relative: 1.0 1.0; to: "weather.clip"; };
         }
         description {
            state: "show" 0.0;
            inherit: "default" 0.0;
	    color: 255 255 255 255;
            visible: 1;
         }
      }

      part {
         name: "weather.bg";
         clip_to: "weather.bg.clip";
         type: SWALLOW;
         mouse_events: 0;
         description {
            state: "default" 0.0;
            rel1 { relative: 0.0 0.0; to: "weather.bg.clip"; }
            rel2 { relative: 1.0 1.0; to: "weather.bg.clip"; }
