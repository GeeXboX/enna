images {
   image: "frame.png" COMP;
   image: "progress_bar_content.png" COMP;
}

group {
   name: "module/weather";

/**********/
/* Styles */
/**********/

   styles {
      style {
         name: "weather_style";
         base: "font=content_bd color=#A0D026 color2=#A0D026A0 style=GLOW";
      }
   }

   color_classes {
      color_class {
         name:  "weather_header";
         color: 160 208 38 255;
         color2: 0 0 0 128;
      }
   }

